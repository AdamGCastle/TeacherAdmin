@page
@model TeacherAdmin.Pages.Students.IndexNewModel
@{
}

<table>
    @for (int i = 0; i < 4; i++)
    {
        int l = i*5;
        <tr>
            @for (int j = 0; j <= 4; j++)
            {
                l += j;
                <td>            
                    <div class="card gutters-sm mt-4">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="@Model.Students[l].PicSource" class="rounded-circle" width="70" />
                                <div class="mt-3">
                                    <h5><strong>@Html.DisplayFor(model => model.Students[l].StudentName)</strong></h5>
                                    <p class="text-secondary mb-1"><strong>Age: </strong>@Html.DisplayFor(model => model.Students[l].Age)</p>
                                    <p class="text-secondary mb-1">Italki Username: <strong>@Html.DisplayFor(model => model.Students[l].UserName)</strong></p>
                                    @*<p class="text-muted font-size-sm">@Html.DisplayFor(model => model.Student.Course)</p>*@
                                </div>
                            </div>
                        </div>
                    </div>                   
                </td>
                l -= j;
            }

        </tr>
    }
    
</table>
