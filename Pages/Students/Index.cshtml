@page
@model TeacherAdmin.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<br />
<div><h2>Current Students (@Model.CurrentStudents.Count)</h2></div>
<br />
<table class="table" style="background-color:#ffffff">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Premium
            </th>
            <th>
                Background
            </th>
            <th>
                Number of Lessons
            </th>
            <th>
                Username
            </th>
            <th>
                Platform
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.CurrentStudents)
        {
            <tr>
                <td>
                    @*<div class="card">
                    <div class="card-body">*@
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src=@item.PicSource class="rounded-circle" width="110" />
                        <div class="mt-3">
                            <h5><strong><a asp-page="./DetailsNew" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.StudentName)</a></strong></h5>
                            @*<p class="text-muted font-size-sm">@Html.DisplayFor(model => model.Student.Course)</p>*@
                        </div>
                    </div>
                    @*</div>
                    </div>*@
                </td>

                <td>
                    @(item.HasDiscount ? "":"PREMIUM")
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonsTaught)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Platform)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./DetailsNew" asp-route-id="@item.ID"><strong>Details</strong></a>
                </td>
            </tr>

        }
    </tbody>
</table>
<br />
